extends ../layout


block layout-content
	div#erstellenContainer
		div.navigator#navigatorTop
			include navigator.pug
		div.SchritteContainer
			div#Schritt1Thema.Schritte
				include Schritt1Thema.pug
			div#Schritt2Alternativen.Schritte
				include Schritt2Alternativen.pug
			div#Schritt3Kriterien.Schritte
				include Schritt3Kriterien.pug
			div#Schritt4Ubersicht.Schritte
				include Schritt4Ubersicht.pug	
			div#Schritt5Teilen.Schritte
				include Schritt5Teilen.pug
			
			button.navButton#navBack(onclick='back()') back
			button.navButton#navNext(onclick='next()') next
	
	script.
		current = 0
		var schritte = ["Schritt1Thema","Schritt2Alternativen","Schritt3Kriterien","Schritt4Ubersicht","Schritt5Teilen"];
		function next(){
			console.log(current);
			console.log(schritte.length);
			document.getElementById(schritte[current]).style.visibility="hidden";
			document.getElementById(schritte[current]).style.zIndex=0;
			if(current < schritte.length-1) current +=1; else current = 0;
			document.getElementById(schritte[current]).style.visibility="visible";
		}
		
		function back(){
			console.log(current);
			document.getElementById(schritte[current]).style.visibility="hidden";
			document.getElementById(schritte[current]).style.zIndex=0;
			if(current > 0) current -=1; else current = schritte.length-1;
			document.getElementById(schritte[current]).style.visibility="visible";
		}

