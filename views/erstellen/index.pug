extends ../layout
block layout-content
    div#creationContainer
        div#logo
        
        div.navigator#navigatorTop(style="display:none")
            include navigator.pug
            
        div.stepsContainer
            a#TopicJump.jump
            img(src='icons/Logo.svg').logoImage.noselect
            button#nightmode(onclick='modeSwitch()') nightmode
            div.topStepPadding
                span.invisible --
            div#step1Topic.Steps(style='display:block;opacity:1')
                include Step1Topic.pug
            div#step2Alternatives.Steps
                include Step2Alternatives.pug
            div#step3Criterias.Steps
                include Step3Criterias.pug
            div#step4Overview.Steps
                include Step4Overview.pug	
            div#step5Share.Steps
                include Step5Share.pug
            
            img.navButton#navBack(onclick='back()' src='icons/Zuruck.svg'  style='display:none').noselect
            img.navButton#navNext(onclick='next()' src='icons/Weiter_grun.svg' style='visibility:hidden;bottom: -20px;').noselect 
    
    script(src="scripts/criteria.js")
    script(src="scripts/dataProcessing.js")
    script(src="scripts/identifier.js")
    script(src="scripts/main.js")
    script(src="scripts/erstellen/navigation.js")
    script(src="scripts/navigationGeneral.js")
    script(src="scripts/erstellen/overview.js")
    script(src="scripts/poll.js")
    script(src="scripts/erstellen/viewManipulation.js")
    script(src="scripts/erstellen/loadingColors.js")
    script(src="scripts/erstellen/inputManipulation.js")
    script(src="scripts/styling.js")
    script(src="scripts/shake.js")
    script(src="scripts/nightmode.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")


